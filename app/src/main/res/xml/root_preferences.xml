<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/general_header">

        <EditTextPreference
            app:key="server_url"
            app:title="@string/server_url"
            app:useSimpleSummaryProvider="true" />

        <CheckBoxPreference
            app:key="should_use_http"
            app:defaultValue="false"
            app:title="@string/should_use_http"
            />

        <CheckBoxPreference
            app:key="show_lock_notifications"
            app:defaultValue="true"
            app:title="@string/show_lock_notifications"
            />
    </PreferenceCategory>

</PreferenceScreen>