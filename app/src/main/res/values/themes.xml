<resources>

    <style name="Theme.Addressbook.Light" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="snackbarStyle">@style/snackBarStyleLight</item>
        <item name="windowActionBar">true</item>
        <item name="toolbarBackgroundColor">@color/white</item>
        <item name="toolbarBorderColor">@color/white</item>
        <item name="iconNormalColor">@color/grey_darken_20</item>
        <item name="iconHighlightColor">@color/almost_black</item>
        <item name="iconDisabledColor">@color/grey_lighten_20</item>
        <item name="rteTextColor">@color/rte_resume_text_color</item>
        <item name="rteHintTextColor">@color/rte_resume_hint_text_color</item>
        <item name="main_list_item_secondary_color">@color/list_item_secondary_color</item>
    </style>

    <style name="Theme.Addressbook.Light.NoActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
        <item name="android:statusBarColor">@color/purple_500</item>
        <item name="actionOverflowButtonStyle">@style/overflowButtonStyleLight</item>
    </style>

    <style name="snackBarStyleLight" parent="Widget.MaterialComponents.Snackbar">
        <item name="android:background">@color/purple_500</item>
    </style>

    <style name="overflowButtonStyleLight" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/purple_500</item>
    </style>

    <style name="Theme.Addressbook.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Addressbook.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AztecToolbarStyle">
        <item name="advanced">false</item>
        <item name="toolbarIconNormalColor">?attr/iconNormalColor</item>
        <item name="toolbarIconHighlightColor">?attr/iconHighlightColor</item>
        <item name="toolbarIconDisabledColor">?attr/iconDisabledColor</item>
    </style>

    <style name="Theme.Addressbook.Dark" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/teal_200</item>
        <item name="colorPrimaryVariant">@color/teal_700</item>
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="snackbarStyle">@style/snackBarStyleDark</item>
        <item name="windowActionBar">true</item>
        <item name="toolbarBackgroundColor">@color/dark_theme_main_grey</item>
        <item name="toolbarBorderColor">@color/dark_theme_main_grey</item>
        <item name="iconNormalColor">@color/teal_200</item>
        <item name="iconHighlightColor">@color/teal_700</item>
        <item name="iconDisabledColor">@color/grey</item>
        <item name="rteTextColor">@color/white</item>
        <item name="rteHintTextColor">@color/light_grey</item>
        <item name="main_list_item_secondary_color">@color/teal_200</item>
    </style>

    <style name="Theme.Addressbook.Dark.NoActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
        <item name="android:statusBarColor">@color/teal_200</item>
        <item name="actionOverflowButtonStyle">@style/overflowButtonStyleDark</item>
    </style>

    <style name="overflowButtonStyleDark" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/teal_200</item>
    </style>

    <style name="snackBarStyleDark" parent="Widget.MaterialComponents.Snackbar">
        <item name="android:background">@color/teal_200</item>
        <item name="textColor">@color/black</item>
    </style>
</resources>