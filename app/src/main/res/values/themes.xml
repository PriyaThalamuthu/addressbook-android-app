<resources>

    <style name="Theme.Addressbook" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="snackbarStyle">@style/snackBarStyle</item>
        <item name="windowActionBar">true</item>
        <item name="toolbarBackgroundColor">@color/white</item>
        <item name="toolbarBorderColor">@color/white</item>
    </style>

    <style name="Theme.Addressbook.NoActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
        <item name="android:statusBarColor">@color/purple_500</item>
        <item name="actionOverflowButtonStyle">@style/overflowButtonStyle</item>
    </style>

    <style name="snackBarStyle" parent="Widget.MaterialComponents.Snackbar">
        <item name="android:background">@color/purple_500</item>
    </style>

    <style name="overflowButtonStyle" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/purple_500</item>
    </style>

    <style name="Theme.Addressbook.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Addressbook.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>