<resources>

    <style name="Theme.Addressbook.Light" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="snackbarStyle">@style/SnackBarStyleLight</item>
        <item name="windowActionBar">true</item>
        <item name="colorAccent">?attr/colorPrimary</item>
        <item name="fab_color">?attr/colorSecondary</item>
        <item name="main_list_item_secondary_color">@color/list_item_secondary_color</item>
    </style>

    <style name="Theme.Addressbook.Light.NoActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
        <item name="android:statusBarColor">@color/purple_500</item>
        <item name="actionOverflowButtonStyle">@style/OverflowButtonStyleLight</item>
    </style>

    <style name="SnackBarStyleLight" parent="Widget.MaterialComponents.Snackbar">
        <item name="android:background">@color/purple_500</item>
    </style>

    <style name="Widget.MaterialComponents.Button.IconOnly">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">12dp</item>
        <item name="android:minHeight">12dp</item>
        <item name="iconGravity">textStart</item>
    </style>

    <style name="OverflowButtonStyleLight" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/purple_500</item>
    </style>

    <style name="Theme.Addressbook.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Addressbook.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.Addressbook.Dark" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/light_blue_500</item>
        <item name="colorPrimaryVariant">@color/light_blue_700</item>
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="snackbarStyle">@style/SnackBarStyleDark</item>
        <item name="windowActionBar">true</item>
        <item name="main_list_item_secondary_color">?attr/colorPrimary</item>
        <item name="colorAccent">@color/light_blue_500</item>
        <item name="fab_color">?attr/colorPrimary</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="actionOverflowButtonStyle">@style/OverflowButtonStyleDarkMain</item>
        <item name="toolbarNavigationButtonStyle">@style/ToolbarNavButtonStyle</item>
    </style>

    <style name="ToolbarNavButtonStyle" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="tint">@color/white</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="Theme.Addressbook.Dark.NoActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="actionOverflowButtonStyle">@style/OverflowButtonStyleDarkLogin</item>
    </style>

    <style name="OverflowButtonStyleDarkLogin" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">?attr/colorPrimary</item>
    </style>

    <style name="OverflowButtonStyleDarkMain" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/white</item>
    </style>

    <style name="SnackBarStyleDark" parent="Widget.MaterialComponents.Snackbar">
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="PreferenceScreenThemeDark" parent="Theme.Addressbook.Dark">
        <item name="android:textColor">@color/light_blue_500</item>
        <item name="android:textColorPrimary">@color/light_blue_500</item>
        <item name="colorAccent">@color/light_blue_500</item>
    </style>

    <style name="PreferenceScreenThemeLight" parent="Theme.Addressbook.Light">
        <item name="android:textColor">@color/purple_500</item>
        <item name="android:textColorPrimary">@color/purple_500</item>
        <item name="colorAccent">@color/purple_500</item>
    </style>
</resources>